<h2> <%= @fleet.name %> </h2>
<%= link_to "Edit Fleet", edit_fleet_path(@fleet) %>    <%= link_to "Add Ships", fleet_ships_path(@fleet) %>
<br>
<table>
  </tr>
    <th> Ship Type</th>
    <th> Ship Name </th>
    <th> Release Ship </th>
  </tr>
  <% Ship.sizes.each do |s| %>
  <% ship = @ships.find_by(size: s) if @ships %>
  <tr>
    <td> <%= s %> </td>
    <td> <%= link_to ship.name , fleet_ship_path(ship) if ship %> </td>
    <td> <%= link_to "Release" , fleet_ship_path(ship), method:"delete" if ship %> </td>
  </tr>
  <% end %>
</table>
